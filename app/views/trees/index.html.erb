<p id="notice"><%= notice %></p>

<h1>Listing Trees</h1>

<table>
  <thead>
    <tr>
      <th>Family</th>
      <th>Leaf-shape</th>
      <th>Amount-of-rings</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.family %></td>
        <td><%= tree.leaf_shape %></td>
        <td><%= tree.amount_of_rings %></td>
        <td><%= tree.age %></td>
        <td><%= link_to 'Show', tree %></td>
        <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
        <td><%= link_to 'Destroy', tree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

